<h1>All Recipes</h1>

<div class="table-responsive">
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Notes</th>
        <th>Date Updated</th>
      </tr>
    </thead>
    <tbody>
      <% @recipes.each do |r| %>
      <tr>
        <td><%= link_to r.name, r %></td>
        <td><%= r.notes %></td>
        <td><%= l(r.updated_at) %></td>
      </tr>
      <% end %>
    </tbody>
    <tfoot>
    </tfoot>
  </table>
</div>
