<%= form_for @recipe, html: {class: "form", role: "form"} do |f| %>
<div class="form-group">
  <%= f.label :name, "New Recipe Name:", class: "" %>
  <%= f.text_field :name,
      class: "form-control",
      placeholder: "Recipe Name" %>    
</div>

<%= f.label :ingredients %>
<%= f.fields_for :ingredients do |i| %>
<div class="form-group">
  <div class="row">
    <div class="col-sm-1">
      <%= i.label :quantity %>
      <%= i.text_field :quantity, class: "form-control", width: "" %>
    </div>
    
    <div class="col-sm-1">
      <%= i.label :measure %>
      <%= i.select(:measure, [
          ["",""],
          ["cup","cup"],
          ["tsp","tsp"],
          ["tbsp","tblsp"],
          ["oz","oz"],
          ["lb","lb"],
          ["can","can"]
          ],
          {},
          {class: "form-control"}
          ) %>
    </div>

    <div class="col-sm-10">
      <%= i.label :name %>
      <%= i.text_field :name, class: "form-control" %>      
    </div>
  </div>
</div>
<% end %>

<%= f.label :directions %>
<%= f.fields_for :directions do |d| %>
<div class="form-group">
  <%= d.text_area :step, rows: "1", class: "form-control" %>
</div>
<% end %>


<div class="form-group">
  <%= f.label :notes %>
  <%= f.text_area :notes, rows: "5", class: "form-control" %>
</div>

<br />
<%= f.submit "Save Recipe", class: "btn btn-primary" %>
<% end %>
